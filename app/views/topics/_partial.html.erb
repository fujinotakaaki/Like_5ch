<div class="topics__artticle">
  <h4>
    <%= link_to topic.title_with_responses_count, topic_path( topic ) %>
  </h4>

  <h5 class="topics__artticle--categories">
    <% topic.categories.each do |category| %>
    <%= link_to category.name, category_path( category ) %>
    &nbsp;
    <% end %>
  </h5>

  <h5>
    <%= topic.updated_info %>
    <%= topic.responses_count %>
  </h5>
</div>
