<!DOCTYPE html>
<html>
<head>
  <title><%= full_title yield(:title) %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://kit.fontawesome.com/<%= ENV['FONT_AWESOME_API'] %>.js" crossorigin="anonymous"></script>
</head>

<body>
  <% if header_include? %>
  <header>
    <div class="container application__trackingHeader">
      <div class="row">
        <div class="col-md-2 col-md-offset-1">
          <%= link_to root_path do %>
          <%= image_tag 'Like5chLogo.png', alt: 'トップページロゴ', width: 90 %>
          <% end %>
        </div>

        <div class="col-md-5">
          <%= render 'layouts/search' %>
        </div>

        <div class="col-md-4">
          <%= link_to 'カテゴリ一覧', categories_path, class: "btn btn-default" %>
          <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-danger", data: { confirm: 'ログアウトしてよろしいですか？' } %>
          <% else %>
          <%= link_to 'ログイン', new_user_session_path, class: "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>
  <% end %>

  <div class="container">
    <div class="row">
      <%= yield %>
    </div>
  </div>
</body>
</html>
