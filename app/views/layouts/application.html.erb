<!DOCTYPE html>
<html>
  <head>
    <title>Xちゃんねる</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if header_include? %>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= image_tag 'Like5chLogo.png', alt: 'トップページロゴ', width: 90 %>
          </div>

          <div class="col-md-6">
            <%= render 'layouts/search' %>
          </div>

          <div class="col-md-3">
            <%= link_to 'カテゴリ一覧', categories_path, class: "btn btn-default" %>
            <% if user_signed_in? %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-default", data: { confirm: 'ログアウトしてよろしいですか？' } %>
            <% else %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <% end %>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
  </html>
