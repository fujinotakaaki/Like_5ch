<% provide(:title, "アカウント新規登録") %>
<div class="devises__form--block">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= resource_partial_error_message(:email) if resource.errors.any? %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Eメール" %>
  </div>

  <div class="form-group">
    <%= resource_partial_error_message(:name) if resource.errors.any? %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="form-group">
    <%= resource_partial_error_message(:password) if resource.errors.any? %>
    <%= f.password_field :password, class: "form-control", placeholder: "パスワード（#{@minimum_password_length}文字以上）" %>
  </div>

  <div class="form-group">
    <%= resource_partial_error_message(:password_confirmation) if resource.errors.any? %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認用）" %>
  </div>

  <div class="form-group">
    <%= f.submit "アカウント作成", class: "btn  btn-primary", style: "width: 100%;" %>
  </div>
  <% end %>

  <p>
    アカウントをお持ちの方は
    <%= link_to 'こちら',  new_session_path(resource_name) %>
    へ
  </p>
  <p>
    トップへ
    <%= link_to '戻る', root_path %>
  </p>
</div>
