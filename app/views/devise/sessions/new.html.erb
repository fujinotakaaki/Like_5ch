<div class="devises__form--block">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= content_tag :p, flash[:alert], class: "red" if flash.any? %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Eメール' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: 'パスワード' %>
  </div>

  <div class="form-group">
    <%= f.submit "ログイン", class: "btn  btn-primary", style: "width: 100%;" %>
  </div>
  <% end %>

  <p>
    初めての方は
    <%= link_to 'こちら',  new_registration_path(resource_name) %>
    で新規登録！！
  </p>
  <p>
    トップへ
    <%= link_to '戻る', root_path %>
  </p>
</div>
